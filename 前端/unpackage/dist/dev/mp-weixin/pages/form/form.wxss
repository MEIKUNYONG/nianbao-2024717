page {
  padding-bottom: 40rpx;
}
.bg {
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}
.banner {
  display: block;
  width: 90%;
  margin: 45rpx auto 0 auto;
}
.form {
  width: 700rpx;
  margin: 24rpx auto;
}
.form .item1 {
  width: 100%;
  border-radius: 20rpx;
  background-color: #ffffff;
  padding: 24rpx;
  margin-bottom: 25rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}
.form .item1 .left {
  margin-bottom: 24rpx;
}
.form .item1 .right .label {
  display: inline-block;
  padding-right: 24rpx;
}
.form .item1 .right radio {
  -webkit-transform: scale(0.7);
          transform: scale(0.7);
}
.form .item {
  width: 100%;
  border-radius: 20rpx;
  background-color: #ffffff;
  padding: 0 24rpx;
  margin-bottom: 25rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 90rpx;
  position: relative;
}
.form .item .list {
  width: 700rpx;
  max-height: 500rpx;
  overflow-y: auto;
  position: absolute;
  top: 95rpx;
  left: 0;
  background-color: #ffffff;
  border-radius: 20rpx;
  z-index: 10;
  box-shadow: 0 0 6rpx #dddddd;
}
.form .item .list .list_item {
  padding: 0 24rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #dddddd;
}
.form .item .list .list_item:last-child {
  border-bottom: none;
}
.form .item .label {
  width: 150rpx;
}
.form .item .right {
  width: 500rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.form .item .right .icon {
  width: 20rpx;
}
.form .item .right .pla {
  font-size: 28rpx;
  color: #999999;
  font-family: Arial, Helvetica, sans-serif;
  width: 450rpx;
}
.form .item .right .input {
  width: 100%;
  height: 90rpx;
}
.form .subBtn {
  width: 700rpx;
  background-color: #1B82F8;
  border-radius: 50rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  color: #ffffff;
  padding: 0 !important;
  margin: 100rpx auto 0rpx auto;
}

